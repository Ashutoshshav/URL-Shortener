<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortner</title>
  </head>
  <body>
    <h1>URL Shortner</h1>

    <% if (locals.id) { %>
    <p>URL Generated : https://localhost:3000/url/<%= id %></p>
    <% } %>

    <div>
      <form method="POST" action="/url">
        <label for="url">Enter Your URL</label>
        <input
          type="text"
          name="url"
          placeholder="https://www.example.com"
          id="url" />

        <button type="submit">Generate</button>
      </form>
    </div>

    <div>
      <% if(locals.allURL) {%>
      <table>
        <thead>
          <th>S. No</th>
          <th>ShortID</th>
          <th>Redirect</th>
          <th>Clicks</th>
        </thead>
        <tbody>
          <% allURL.forEach((url, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= url.shortId %></td>
            <td><%= url.redirectURL %></td>
            <td><%= url.visitHistory.length %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>
  </body>
</html>
